@model IEnumerable<ToDo.Domain.Entities.Item>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Adicionar tarefa</a>
</p>
<p>
    <a asp-action="Edit">Editar tarefa</a>
</p>
<p>
    <a asp-action="Delete">Excluir tarefa</a>
</p>

<h1>
    <input type="button" onclick="add" action="create" />
</h1>

<table id="item" class="table">
    <thead>
        <tr class="">
            <th>Descrição</th>
            <th>Data de criação</th>
            <th>Status</th>
            <th>Editar</th>
            <th>Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td><input type="checkbox" onclick="edit" value="@item.Done" disabled @( item.Done ? "checked" : "" ) action="Edit" /></td>
                <td><input type="button" onclick="delete" value="@item.Id" action="delete" /></td>
            </tr>
        }
    </tbody>
</table>

<script>
    function add() {
        window.location.href = '/Create'
    }

    function edit() {
        window.location.href = '/Edit'
    }

    function delete () {
        window.location.href = '/Delete'
    }
</script>